project wide code convention:

    lower case characters

    types:
        struct types:
            aggregate types
            suffix: "_st"
        class types:
            non-aggregate types
            suffix:"_ct"
        enumerator types:
            scoped enumerators
            suffix: "_et"
        union types:
            suffix: "_ut"
        alias types:
            suffix: "_t"

    concepts:
        suffix: "_c"

    values:
        automatic type deduction
        const by default
        members:
            prefix: "m_"
        function arguments:
            prefix: "a_"
        enumerators:
            prefix: "e_"

    functions:
        automatic type deduction

    template parameters:
        prefix: "tp_"