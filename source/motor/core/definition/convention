project wide code convention:

    lower case characters

    types:
        struct types:
            suffix: "_st"
            aggregate types
        class types:
            suffix:"_ct"
            non-aggregate types
        enumerator_c types:
            suffix: "_et"
            scoped enumerator_cs
        union types:
            suffix: "_ut"
        alias types:
            suffix: "_t"

    concepts:
        sufix: "_c"

    values:
        const by default
        automatic type deduction
        member:
            prefix: "m_"
        static member:
            prefix: "s_"
        function arguments:
            prefix: "a_"
        
    functions:
        automatic type deduction

            
